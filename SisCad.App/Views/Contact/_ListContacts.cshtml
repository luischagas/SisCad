@model IEnumerable<SisCad.Application.Models.Contact.ContactDataModel>

<table class="table table-hover">
    <thead class="thead-dark">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td class="text-right">
                <a class="btn btn-warning" asp-controller="Contact" asp-action="Details" asp-route-id="@item.Id"><spam class="fa fa-search"></spam> </a>
                <a class="btn btn-info" asp-controller="Contact" asp-action="Edit" asp-route-id="@item.Id"><spam class="fa fa-pencil-alt"></spam> </a>
                <a class="btn btn-danger" asp-controller="Contact" asp-action="Delete" asp-route-id="@item.Id"><spam class="fa fa-trash"></spam> </a>
            </td>
        </tr>
    }
    </tbody>
</table>